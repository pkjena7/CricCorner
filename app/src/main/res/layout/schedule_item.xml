<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/schedule_item"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/shimer_bg"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/schedule_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:padding="8dp"

        app:cardCornerRadius="12dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView

                android:id="@+id/team1_image"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:padding="8dp"
                android:src="@mipmap/ic_launcher" />

            <ImageView

                android:id="@+id/team2_image"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:padding="8dp"
                android:src="@mipmap/ic_launcher" />


            <TextView
                android:id="@+id/team1"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@id/team1_image"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:padding="5dp"
                android:text="Team 1"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#0E27CC"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/team2"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@id/team2_image"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:padding="5dp"
                android:text="Team 2"
                android:textAlignment="center"
                android:textColor="#0E27CC"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/match_no"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:textColor="#0E27CC"
                android:layout_marginTop="5dp"
                android:text="Match no"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/day"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:textColor="#0E27CC"
                android:layout_below="@id/match_no"
                android:layout_centerHorizontal="true"
                android:text="Day"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/date"
                android:layout_width="100dp"
                android:height="20dp"
                android:textColor="#0E27CC"
                android:layout_height="wrap_content"
                android:layout_below="@+id/day"
                android:layout_centerHorizontal="true"
                android:text="Date"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_below="@+id/date"
                android:layout_centerHorizontal="true"
                android:textColor="#0E27CC"
                android:text="Time"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/location"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_below="@+id/time"
                android:layout_centerHorizontal="true"
                android:textColor="#0E27CC"
                android:text="Location"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="bold" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>